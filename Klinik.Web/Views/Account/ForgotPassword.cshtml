@{
    Layout = null;
}

<!doctype html>
<html class="fixed">
<head>
    <title>@Klinik.Resources.UIMessages.ForgotPasswordTitle</title>
    <!-- Basic -->
    <meta charset="UTF-8">
    <meta name="keywords" content="HTML5 Admin Template" />
    <meta name="description" content="Porto Admin - Responsive HTML5 Template">
    <meta name="author" content="okler.net">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Web Fonts  -->
    <link href="http://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/Content/Octopus/assets/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Octopus/assets/vendor/font-awesome/css/font-awesome.css" />
    <link rel="stylesheet" href="~/Content/Octopus/assets/vendor/bootstrap-datepicker/css/datepicker3.css" />

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/Content/Octopus/assets/stylesheets/theme.css" />

    <!-- Skin CSS -->
    <link rel="stylesheet" href="~/Content/Octopus/assets/stylesheets/skins/default.css" />

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="~/Content/Octopus/assets/stylesheets/theme-custom.css">

    <!-- Head Libs -->
    <script src="~/Content/Octopus/assets/vendor/modernizr/modernizr.js"></script>

</head>
<body>
    <!-- start: page -->
    <section class="body-sign">
        <div class="center-sign">
            <a href="/" class="logo pull-left">
                <img src="~/Content/images/logo-medica.png" height="54" alt="Porto Admin" />
            </a>

            <div class="panel panel-sign">
                <div class="panel-title-sign mt-xl text-right">
                    <h2 class="title text-uppercase text-bold m-none"><i class="fa fa-user mr-xs"></i> @Klinik.Resources.UIMessages.RecoverPassword</h2>
                </div>
                <div class="panel-body">
                    <div class="alert alert-info">
                        <p class="m-none text-semibold h6">@Klinik.Resources.UIMessages.EnterEmailInstruction</p>
                    </div>

                    @using (Html.BeginForm())
                    {
                        <div class="form-group mb-none">
                            <div class="input-group">
                                @Html.TextBox("EmailID", "", new { @class = "form-control input-lg", @placeholder = "E-mail", @type = "email" })
                                <span class="input-group-btn">
                                    <button class="btn btn-primary btn-lg" type="submit">@Klinik.Resources.UIMessages.Reset</button>
                                </span>
                            </div>
                        </div>

                        <p class="text-center mt-lg">@Klinik.Resources.UIMessages.RememberQuestion <a href="@Url.Action("Login","Account")">@Klinik.Resources.UIMessages.Login</a></p>
                    }

                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success">
                            @ViewBag.Message
                        </div>
                    }

                </div>
            </div>

            <p class="text-center text-muted mt-md mb-md">&copy; @Klinik.Resources.UIMessages.Copyright</p>
        </div>
    </section>
    <!-- end: page -->
    <!-- Vendor -->
    <script src="~/Content/Octopus/assets/vendor/jquery/jquery.js"></script>
    <script src="~/Content/Octopus/assets/vendor/jquery-browser-mobile/jquery.browser.mobile.js"></script>
    <script src="~/Content/Octopus/assets/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="~/Content/Octopus/assets/vendor/nanoscroller/nanoscroller.js"></script>
    <script src="~/Content/Octopus/assets/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/Content/Octopus/assets/vendor/jquery-placeholder/jquery.placeholder.js"></script>

    <!-- Theme Base, Components and Settings -->
    <script src="~/Content/Octopus/assets/javascripts/theme.js"></script>

    <!-- Theme Custom -->
    <script src="~/Content/Octopus/assets/javascripts/theme.custom.js"></script>

    <!-- Theme Initialization Files -->
    <script src="~/Content/Octopus/assets/javascripts/theme.init.js"></script>

</body>
</html>