@model Klinik.Entities.Account.AccountModel

@{
    Layout = null;
}

<html lang="en">
<head>
    <title>@Klinik.Resources.UIMessages.LoginTitle</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/Content/images/favicon-login.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/Login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Content/Login/css/login.css">
    <!--===============================================================================================-->
</head>
<body>
    <div class="limiter">
        <div class="container-loginMMS">
            <div class="wrap-loginMMS">
                <div class="loginMMS-form-title" style="background-image: url(../../Content/images/bg-login.jpg);">
                </div>

                @using (Html.BeginForm("SignIn", "Account", FormMethod.Post, new { @class = "loginMMS-form validate-form" }))
                {
                    <div class="wrap-inputMMS validate-input m-b-26" data-validate="Username is required">
                        <span class="label-inputMMS">@Klinik.Resources.UIMessages.Username</span>
                        @Html.TextBoxFor(x => x.UserName, null, new { @class = "inputMMS", @id = "tbUserName", @placeholder = @Klinik.Resources.UIMessages.EnterUsername, @Value = "adminsuper" })
                        <span class="focus-inputMMS"></span>
                    </div>

                    <div class="wrap-inputMMS validate-input m-b-18" data-validate="Password is required">
                        <span class="label-inputMMS">@Klinik.Resources.UIMessages.Password</span>
                        @Html.TextBoxFor(x => x.Password, null, new { @class = "inputMMS", @id = "tbPassword", @type = "password", @placeholder = @Klinik.Resources.UIMessages.EnterPassword, @Value = "admin" })
                        <span class="focus-inputMMS"></span>
                    </div>

                    <div class="wrap-inputMMS validate-input m-b-26" data-validate="Organization is required">
                        <span class="label-inputMMS">@Klinik.Resources.UIMessages.Organization</span>
                        @Html.TextBoxFor(x => x.Organization, null, new { @class = "inputMMS", @id = "tbOrganization", @placeholder = @Klinik.Resources.UIMessages.EnterOrganizationCode, @Value = "M008" })
                        <span class="focus-inputMMS"></span>
                    </div>

                    <div class="flex-sb-m w-full p-b-30">
                        <div class="contact100-form-checkbox">
                            <input class="input-checkboxMMS" id="ckb1" type="checkbox" name="remember-me">
                            <label class="label-checkboxMMS" for="ckb1">
                                @Klinik.Resources.UIMessages.RememberMe
                            </label>
                        </div>
                        <div>
                            <a href="@Url.Action("ForgotPassword","Account")" class="txt1">
                                @Klinik.Resources.UIMessages.ForgotPassword
                            </a>
                        </div>
                    </div>
                    if (@ViewBag.Message != null)
                    {
                        <div class="flex-sb-m w-full p-b-30">
                            <label class="label-error">@ViewBag.Message</label>
                        </div>
                    }

                    <div class="container-loginMMS-form-btn">
                        <button class="loginMMS-form-btn">
                            @Klinik.Resources.UIMessages.Login
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>

    <!--===============================================================================================-->
    <script src="~/Content/Login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Content/Login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/Login/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/Login/js/login.js"></script>
</body>
</html>